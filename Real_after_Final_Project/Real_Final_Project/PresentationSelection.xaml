<Page x:Class="Real_Final_Project.PresentationSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:Controls="clr-namespace:Coding4Fun.Kinect.Wpf.Controls;assembly=Coding4Fun.Kinect.Wpf" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
	Title="PresentationSelection">
    <Page.Background>
        <ImageBrush ImageSource="Images/base_bg.jpg" />
    </Page.Background>
    <Grid x:Name="LayoutRoot" Loaded="Main_Loaded">

        <!-- <Canvas Background="#1a1c1a">-->
        <Canvas>
            <Image x:Name="Image2" Width="200" Height="200" Canvas.Right="0" Canvas.Top="0"></Image>
            
            <Controls:HoverButton Margin="0" Padding="0" ImageSize="50" x:Name="kinectButton"
                                  ImageSource="/Real_Final_Project;component/Images/myhand.png"  
                                ActiveImageSource="/Real_Final_Project;component/Images/myhand.png" 
                       TimeInterval="2000"  Panel.ZIndex="1000" Canvas.Left="0" Canvas.Top="0"/>
            <Image Height="78" Canvas.Top="55"  Source="Images/choose_presentation.png" Canvas.Left="-1"/>
        </Canvas>
    </Grid>
</Page>
